{
    "comments": {
        // Символ, используемый для однострочного комментария. Удалите эту запись, если ваш язык не поддерживает комментарии к строкам.
        "lineComment": "#"
    },
    // Символы, используемые в качестве скобок
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
		{ "open": "{", "close": "}" },
		{ "open": "[", "close": "]" },
		{ "open": "(", "close": ")" },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "'", "close": "'", "notIn": ["string"] },
        { "open": "`", "close": "`", "notIn": ["string"] },
        { "open": "\"\"\"", "close": "\"\"\"", "notIn": ["string"] }
    ],
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"],
        ["\"\"\"", "\"\"\""]
    ],
    "folding": {
        "markers": {
          "start": "^#region",
          "end": "^#endregion"
        },
        "offSide": true
    }
}
